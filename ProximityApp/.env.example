# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Google Maps API (if using Mapbox, add Mapbox token instead)
GOOGLE_MAPS_API_KEY_ANDROID=your_android_maps_key
GOOGLE_MAPS_API_KEY_IOS=your_ios_maps_key

# App Configuration
APP_ENV=development
API_URL=https://your-api-url.com

# Feature Flags
ENABLE_BLE_PROXIMITY=true
ENABLE_BACKGROUND_LOCATION=true
DEFAULT_PROXIMITY_RADIUS=100

# Notification Configuration
ENABLE_PUSH_NOTIFICATIONS=true
